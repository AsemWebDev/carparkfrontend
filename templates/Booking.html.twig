{% extends "base.html.twig" %}

{% block body %}
    {% form_theme form 'bootstrap_5_layout.html.twig' %}

    <h2>Book your parking space</h2>
    <div class="row">
        <div class="col-4">{{ form(form) }}</div>
    </div>

    <div class="row">
        <div class="col">{{ message }}</div>
    </div>

    {% if availability|length > 0 %}
        {% include 'include/spaces.html.twig' with {'available_spaces': availability} %}
    {% endif %}
{% endblock %}
