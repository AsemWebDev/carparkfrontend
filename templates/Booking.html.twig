{% extends "base.html.twig" %}

{% block body %}
    {% form_theme form 'bootstrap_5_layout.html.twig' %}

    <h2>Book your parking space</h2>
    {{ form(form) }}

    <div class="row">
        <div class="col">
            {{ message }}
        </div>
    </div>

    {% if availability|length > 0 %}
        {% include 'include/spaces.html.twig' with {'available_spaces': availability} %}
    {% endif %}
{% endblock %}
